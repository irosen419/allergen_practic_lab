<h1>All Our Recipes!</h1>

<h3>Search by Ingredient Number (1, 2 or 3):</h3>

<%= form_tag(recipes_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ('Search') %>
<% end %>

<ul>
    <% @recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
</ul>